<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AndroidERestaurant" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- navBar -->
    <style name="titleNavBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <!-- composant titre -->
    <style name="titleText">
        <item name="android:textColor">@color/darkMainColor</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <!-- composant subtitre -->
    <style name="subtitleText">
        <item name="android:textColor">@color/lightMainColor</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="priceText">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="txtText">
        <item name="android:textColor">@color/darkMainColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

</resources>